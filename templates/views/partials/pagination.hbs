<div class="row">
  <div class="col-full">
      <nav class="pgn">
          <ul class="pagination">
              <li {{#unless data.posts.previous}}class="disabled"{{/unless}}>
                <a class="pgn__prev" href="{{paginationPreviousUrl data.posts.previous}}">Prev</a>
              </li>
              {{{paginationNavigation data.posts.pages data.posts.currentPage data.posts.totalPages}}}
              <li {{#unless data.posts.next}}class="disabled"{{/unless}}>
                <a class="pgn__next" href="{{paginationNextUrl data.posts.next data.posts.totalPages}}">Next</a>
              </li>
          </ul>
      </nav>
  </div>
</div>